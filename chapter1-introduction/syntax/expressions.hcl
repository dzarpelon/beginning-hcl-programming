# Integer expression
integer_example = 42

# Float expression
float_example = 3.14

# Boolean expression
boolean_example = true

# String expression
string_example = "Hello, HCL!"

# List expression
list_example = [1, 2, 3, 4, 5]

# Map expression
map_example = {
    key1 = "value1"
    key2 = "value2"
}

/* Conditional expression
In this case, since the condition is true, conditional_example will be assigned the value "yes".
If the condition were false, conditional_example would be assigned the value "no". */
conditional_example = true ? "yes" : "no"

# Arithmetic expression
arithmetic_example = 5 + 3 * 2

# Logical expression
logical_example = true && false || true

# Function call expression (example with a hypothetical function)
function_example = length("example")